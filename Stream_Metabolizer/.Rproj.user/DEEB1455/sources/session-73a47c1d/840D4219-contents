## 3. Inspect Data
```{r inspect, echo = FALSE, warning=FALSE, message=FALSE}

fig = dat %>% unitted::v() %>%
  mutate(DO.pctsat = 100 * (DO.obs / DO.sat)) %>%
  select(solar.time, starts_with('DO')) %>%
  gather(type, DO.value, starts_with('DO')) %>%
  mutate(units=ifelse(type == 'DO.pctsat', 'DO\n(% sat)', 'DO\n(mg/L)')) %>%
  ggplot(aes(x=solar.time, y=DO.value, color=type)) + geom_point() + 
  facet_grid(units ~ ., scale='free_y') + theme_bw() +
  scale_color_discrete('variable')

labels = c(depth='Depth m', temp.water='water temp\n(deg C)', light='PAR\n(umol m^-2 s^-1)')

fig22 = dat %>% unitted::v() %>%
  select(solar.time, depth, temp.water, light) %>%
  gather(type, value, depth, temp.water, light) %>%
  mutate(
    type=ordered(type, levels=c('depth','temp.water','light')),
    units=ordered(labels[type], unname(labels))) %>%
  ggplot(aes(x=solar.time, y=value, color=type)) + geom_point() +
  facet_grid(units ~ ., scale='free_y') + theme_bw() +
  scale_color_discrete('variable')

labels = c(discharge='discharge\n(m3/S)', temp.water='water temp\n(deg C)', depth='water depth')

fig23 = dat %>% unitted::v() %>%
  select(solar.time, discharge, temp.water, depth) %>%
  gather(type, value, temp.water, depth) %>%
  mutate(
    type=ordered(type, levels=c('discharge','temp.water','depth')),
    units=ordered(labels[type], unname(labels))) %>%
  ggplot(aes(x=solar.time, y=value, color=type)) + geom_point() +
  facet_grid(units ~ ., scale='free_y') + theme_bw() +
  scale_color_discrete('variable')

